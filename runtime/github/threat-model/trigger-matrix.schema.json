{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.ai/schemas/github-mode/trigger-matrix.schema.json",
  "title": "GitHub mode trigger matrix",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "securityGoals", "contexts", "abuseCases"],
  "properties": {
    "$schema": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "securityGoals": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "contexts": {
      "type": "array",
      "minItems": 5,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "trigger",
          "variant",
          "trustLevel",
          "privilegedExecutionAllowed",
          "branchMutationPolicy",
          "requiredControls"
        ],
        "properties": {
          "trigger": {
            "type": "string",
            "enum": ["pull_request", "push", "schedule", "workflow_dispatch"]
          },
          "variant": {
            "type": "string",
            "enum": ["fork", "internal", "protected_branch", "default"]
          },
          "trustLevel": {
            "type": "string",
            "enum": [
              "untrusted",
              "semi_trusted",
              "trusted",
              "trusted_automation",
              "trusted_operator"
            ]
          },
          "privilegedExecutionAllowed": {
            "type": "boolean"
          },
          "branchMutationPolicy": {
            "type": "string",
            "enum": ["none", "pr_only"]
          },
          "requiredControls": {
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "abuseCases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "description", "preventiveControls", "detectiveControls"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "preventiveControls": {
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "detectiveControls": {
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  }
}
