{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openclaw.ai/schemas/runtime/github-mode/manifest.schema.json",
  "title": "GitHub Runtime Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "manifestVersion", "components"],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^1\\.[0-9]+$"
    },
    "manifestVersion": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "components": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "version", "owner"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "version": {
            "type": "string",
            "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$"
          },
          "owner": {
            "type": "string",
            "minLength": 3
          }
        }
      }
    }
  }
}
